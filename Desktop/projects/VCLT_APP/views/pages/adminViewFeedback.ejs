                                <li><a class="dropdown-item" href="/">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section>
        <center>
            <h3 class="mt-4">Requests</h3>
        </center>
        <div class="container mt-4 table-responsive">
            <table id="myTable" class="display">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Rating</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach((user)=>{%>
                        <tr>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.rating %>
                            </td>
                            <td>
                                <%= user.feedbackmessage %>
                            </td>
                        </tr>
                        <%})%>
                </tbody>
            </table>
        </div>
    </section>
</body>

